  {% if project.static_url is defined %} 
    handle_path {{ project.static_url }}/* {
      root * {{ project_shared_static_dir }}
      file_server
    }
  {% endif %}
  {% if project.media_url is defined %}
    handle_path {{ project.media_url }}/* {
      root * {{ project_media_dir }}
      file_server
    }
  {% endif %}
  reverse_proxy :{{ emperor_port }}
}
